server {
  listen 443 ssl;
  server_name {{ domain }};
  ssl_certificate {{ nginx_cert_path }}/selfsigned.crt;
  ssl_certificate_key {{ nginx_cert_path }}/selfsigned.key;
  location / {
    root /var/www/html;
    index index.html index.htm;
  }
}
server {
  listen 80;
  server_name {{ domain }};
  return 301 https://$host$request_uri;
}
